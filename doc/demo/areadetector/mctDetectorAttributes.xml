    <Attribute name="Flag"                type="EPICS_PV" source="2bma:m19.VAL"                 dbrtype="DBR_DOUBLE"/>
	
	<Attribute name="TableX"              type="EPICS_PV" source="2bmb:table3.X"                dbrtype="DBR_DOUBLE"/>
	<Attribute name="TableY"              type="EPICS_PV" source="2bmb:table3.Y"                dbrtype="DBR_DOUBLE"/>
	<Attribute name="TableZ"              type="EPICS_PV" source="2bmb:table3.Z"                dbrtype="DBR_DOUBLE"/>
    <Attribute name="TomoX"               type="EPICS_PV" source="2bmb:m52.VAL"                 dbrtype="DBR_DOUBLE"/>
    <Attribute name="TomoY"               type="EPICS_PV" source="2bmb:m50.VAL"                 dbrtype="DBR_DOUBLE"/>
    <Attribute name="NNRail"              type="EPICS_PV" source="2bmb:m31.VAL"                 dbrtype="DBR_DOUBLE"/>
