	<Attribute name="MirrorYAVG"          type="EPICS_PV" source="2bma:M1avg.VAL"               dbrtype="DBR_DOUBLE"/>
	<Attribute name="MirrorYANGL"         type="EPICS_PV" source="2bma:M1ang.VAL"               dbrtype="DBR_DOUBLE"/>
	<Attribute name="MirrorYUP"           type="EPICS_PV" source="2bma:M1us.VAL"                dbrtype="DBR_DOUBLE"/>
	
    <Attribute name="MirrorUS"            type="EPICS_PV" source="2bma:m30.VAL"                 dbrtype="DBR_DOUBLE"/>
