   	<Attribute name="HSlitsDSSize"        type="EPICS_PV" source="2bma:Slit2Hsize.VAL"          dbrtype="DBR_ENUM"/>
   	<Attribute name="HSlitsDSGap"         type="EPICS_PV" source="2bma:Slit2Hcenter.VAL"        dbrtype="DBR_ENUM"/>
