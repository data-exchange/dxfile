   	<Attribute name="VSlitsUSGap"         type="EPICS_PV" source="2bma:Slit1Vcenter.VAL"        dbrtype="DBR_ENUM"/>
   	<Attribute name="VSlitsDSSize"        type="EPICS_PV" source="2bma:Slit2Vsize.VAL"          dbrtype="DBR_ENUM"/>
   	<Attribute name="VSlitsDSGap"         type="EPICS_PV" source="2bma:Slit2Vcenter.VAL"        dbrtype="DBR_ENUM"/>
	
	<Attribute name="MirrorCoat"          type="EPICS_PV" source="2bma:m3.VAL"                  dbrtype="DBR_DOUBLE"/>
